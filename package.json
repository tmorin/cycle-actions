{
  "name": "cycle-actions",
  "version": "0.1.0-alpha.0",
  "description": "A Cycle.js driver to manage actions.",
  "main": "lib/cjs/index.js",
  "module": "lib/es6/index.js",
  "typings": "lib/cjs/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/tmorin/cycle-actions.git"
  },
  "author": {
    "name": "Thibault Morin",
    "url": "https://tmorin.github.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/tmorin/cycle-actions/issues"
  },
  "homepage": "https://gitlab.com/tmorin/cycle-actions#readme",
  "scripts": {
    "build": "npm run build-cjs && npm run build-es6",
    "build-cjs": "tsc --module commonjs --outDir ./lib/cjs",
    "build-es6": "tsc --module es6 --outDir ./lib/es6",
    "test": "JEST_JUNIT_OUTPUT='./coverage/junit.xml' jest --coverage --ci --reporters=default --reporters=jest-junit",
    "test-watch": "jest --watchAll"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true
  },
  "devDependencies": {
    "@cycle/isolate": "^5.0.0",
    "@cycle/run": "^5.2.0",
    "@types/jest": "^24.0.14",
    "@types/node": "^12.0.8",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "standard-version": "^6.0.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2",
    "xstream": "^11.11.0"
  }
}
