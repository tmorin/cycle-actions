{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "strict": false,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "module": "es6",
    "esModuleInterop": true,
    "target": "es5",
    "lib": [
      "es7"
    ]
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": [
    "src/**/*"
  ],
  "typedocOptions": {
    "entryPoints": [
      "./src/driver.ts"
    ],
    "out": "./typedoc"
  }
}

